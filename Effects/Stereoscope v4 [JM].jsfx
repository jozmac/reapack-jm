      mag_buffer[i] > 0.5 ? mag_buffer[i] -= 1;
      //mag_buffer[i] = atan(H_a.re);
      
      mag_bufferSum[i] = mag_buffer[i] + mag_bufferSum[i]*mag_decay_factor;
      
      crosmag_buffer[i] = sqrt(S_AA.re^2 + S_BB.re^2);
      
      i += 1;
    );
  
  //  pass = 1;
  );
  
  
