      fft_bufferA[2*i+1] = pha_mul;
      //*/
      
      /* vocalrediso.ny
      phase_width = $pi/2;
      normA = sqrt(sqr(rA) + sqr(iA));
      normB = sqrt(sqr(rB) + sqr(iB));
      phase = acos((rA * rB + iA * iB) / (normA * normB)) / phase_width;
