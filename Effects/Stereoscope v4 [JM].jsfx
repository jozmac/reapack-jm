      fft_bufferA[2*i+1] = weight_norm;
      //*/
      
      
      
      /* Coherence
      S_AB_im_avg = S_AB_buffer[2*i  ] = S_AB_buffer[2*i  ]*coherence_decay_factor + (S_AB.im)*bin_mag;
