multip = 1; multip2 = 1; mag_add=0;
pi = $pi;
pi2 = 2*pi;
pidiv2 = pi/2;

MAX_FFT_SIZE = 32768;

freemem = 0;
//freemem = (fft_buffer = freemem) + MAX_FFT_SIZE*2;
freemem = (window_buffer = freemem) + MAX_FFT_SIZE;

buffer_length = srate;
