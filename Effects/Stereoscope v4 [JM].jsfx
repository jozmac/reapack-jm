      fft_bufferA[2*i+1] = phase = -atan2(S_AB_im_avg,S_AB_re_avg);
      //*/
      
      
      //* ///<<<>>>///
      unwrap ? (
      
        phase > pi/2 || phase < -pi/2 ? (mag_add = 1; multip =-1):(mag_add = 0; multip = 1);
        
        multip2 = 2;
        /*
        magni = mag_bufferSum[i];
